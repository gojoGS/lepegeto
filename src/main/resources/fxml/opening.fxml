<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: ebdbb2;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lepegeto.javafx.controller.OpeningController">
   <top>
      <ImageView fitHeight="150.0" fitWidth="512.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <image>
            <Image url="@result.png" />
         </image>
      </ImageView>
   </top>
   <bottom>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="HINT: Left click on a figure to select it, right click on a tile to move it there." BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="player1TextField" alignment="CENTER" promptText="Player1" />
                  <TextField fx:id="player2TextField" alignment="CENTER" promptText="Player2" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#onNewGame" style="-fx-background-color: #928374;" text="New Game" />
               <Button fx:id="loadGameButton" mnemonicParsing="false" onAction="#onLoadGame" style="-fx-background-color: #928374;" text="Load Game" />
               <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExit" style="-fx-background-color: #928374;" text="Exit" />
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
